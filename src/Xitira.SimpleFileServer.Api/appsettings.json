{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "SimpleFileServer",
    "Audience": "SimpleFileServerUsers",
    "Key": "YourSecretKeyForAuthenticationOfSimpleFileServer12345",
    "Expiration": "4"
  },
  "Shares": [
    {
      "Name": "sharename",
      "Path": "/absolute/path/to/share/on/disk"
    }
  ],
  "Users": [
    {
      "Username": "user",
      "Password": "pass",
      "Roles": [
        "User",
        "Admin"
      ],
      "Scopes": [
        "read",
        "write",
        "delete"
      ],
      "Shares": [
        "sharename"
      ]
    }
  ]
}
